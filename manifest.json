{
	"manifest_version": 2,

	"name": "__MSG_app_name__",
	"description": "__MSG_app_description__",
	"version": "1.1.9",

	"default_locale": "en",
	"homepage_url": "https://github.com/GenbuHase/BouyomiLauncher",

	"permissions": [
		"tabs",
		"webNavigation",
		"storage",

		"*://www.youtube.com/live_chat*",
		"*://studio.youtube.com/channel/*/livestreaming/dashboard?*"
	],

	"background": {
		"scripts": ["scripts/back/index.js"],
		"persistent": false
	},
	
	"content_scripts": [
		{
			"js": [
				"libs/Init.js",
				"libs/ChromeStorage.js",

				"scripts/content/index.js"
			],

			"matches": [
				"*://www.youtube.com/live_chat*",
				"*://studio.youtube.com/channel/*/livestreaming/dashboard?*"
			],

			"all_frames": true,
			"run_at": "document_start"
		},

		{
			"js": ["scripts/content/services/YouTube.js"],
			"matches": [
				"*://www.youtube.com/live_chat*",
				"*://studio.youtube.com/channel/*/livestreaming/dashboard?*"
			],

			"all_frames": true,
			"run_at": "document_idle"
		}
	],

	"browser_action": {
		"default_title": "__MSG_app_name__",
		"default_popup": "views/Settings/index.html"
	},

	"options_ui": {
		"page": "views/Settings/index.html",
		"open_in_tab": false
	}
}